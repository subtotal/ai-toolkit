  "homepage": "https://github.com/typecastle/ai-toolkit/tree/main/modelcontextprotocol",
  "description": "A command line tool for setting up a Subtotal MCP server",
  "bin": "dist/index.js",
  "files": [
    "dist/index.js",
    "LICENSE",
    "README.md",
    "VERSION",
    "package.json"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "clean": "rm -rf dist",
    "lint": "eslint \"./**/*.ts*\"",
    "prettier": "prettier './**/*.{js,ts,md,html,css}' --write",
