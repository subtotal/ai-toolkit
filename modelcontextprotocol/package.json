    "eslint-plugin-prettier": "^5.5.0",
    "globals": "^15.15.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
